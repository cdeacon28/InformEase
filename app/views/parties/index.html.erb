<p id="notice"><%= notice %></p>

<h1>Parties</h1>
<hr>

<%= form_tag 'parties/filter', method: :get, remote: true do |form| %>
  <select name="party">
    <option value="all">All</option>
    <%= @parties.each do |party| %>
      <option value="<%= party.id %>"><%= party.name %></option>
    <% end %>
  </select>

  <%= submit_tag "Filter", class: "btn btn-primary" %>
<% end %>

<div id="parties-info">

    <%= render 'party_details', parties: @parties  %>

</div>

