<h1>Find out which party is right for you!</h1>

<% @user_opinions.each do |user_opinion| %>
  <li>
    <div class="text-center">
      <div>
        <h2><%= user_opinion.issue.name %></h2>
      </div>
      <div>
        <%= user_opinion.issue.question %>
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-3">
      <button class="button-answer mx-3">I Disagree</button>
      <button class="button-answer selected mx-3">I Agree</button>
    </div>
  </li>
<% end %>
